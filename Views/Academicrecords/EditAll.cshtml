@model List<LabAssignment6.DataAccess.Academicrecord>

@{
    ViewData["Title"] = "Edit All";
}

<h1>Edit All</h1>
<h4>Academic Records</h4>

<form asp-action="EditAll" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-action="EditAll" asp-route-sortOrder="@ViewData["CourseSortParam"]">Course</a>
                </th>
                <th>
                    <a asp-action="EditAll" asp-route-sortOrder="@ViewData["StudentSortParam"]">Student</a>
                </th>
                <th>Grade</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Model[i].CourseCodeNavigation?.Code - @Model[i].CourseCodeNavigation?.Title
                        <input type="hidden" name="updatedRecords[@i].CourseCode" value="@Model[i].CourseCode" />
                    </td>
                    <td>
                        @Model[i].Student?.Id - @Model[i].Student?.Name
                        <input type="hidden" name="updatedRecords[@i].StudentId" value="@Model[i].StudentId" />
                    </td>
                    <td>
                        <input name="updatedRecords[@i].Grade" value="@Model[i].Grade" class="form-control" />
                    </td>
                    <td>
                        <span class="text-danger">
                            @Html.ValidationMessage($"updatedRecords[{i}].Grade")
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
